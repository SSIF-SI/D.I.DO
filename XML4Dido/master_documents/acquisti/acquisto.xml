<?xml version="1.0" encoding="UTF-8"?>

<masterDocument name="acquisto" owner="SA">
	<types>
		<type>mepa</type>
		<type>fuori mepa</type>
	</types>
	<inputs>
		<input from="geco" key="id_ordine">id ordine</input>
		<input from="geco" key="ditta" shortView="true">fornitore</input>
		<input from="geco" key="personale_cf" transform="idPersonaFromCf" values="persone" shortView="true">richiedente</input>
		<input from="geco" key="destinatario_cf" transform="idPersonaFromCf" values="persone" shortView="true">destinatario</input>
		<input from="geco" key="descrizione" type="textarea">descrizione</input>
		<input from="geco" key="gae_nome" shortView="true">linea attività</input>
		<input from="geco" key="gae_anno">linea attività (anno)</input>
		<input from="geco" key="natura_finanziamento">natura finanziamento</input>
		<input from="geco" key="piano_conto">voce del piano dei conti</input>
		<input from="geco" key="responsabile_cf" transform="gruppoFromCf" values="gruppi">laboratorio</input>
		<input from="geco" key="rup_cf" transform="idPersonaFromCf" values="persone" signRole="RUP">rup</input>
		<input from="geco" key="codice_cig">cig</input>
		<input from="geco" key="codice_cup">cup</input>
		<input from="geco" key="numero_mepa">numero mepa</input>
		<input from="geco" key="titolare_cf" transform="idPersonaFromCf" values="responsabili" signRole="TF">titolare dei fondi</input>
		<input from="geco" key="responsabile_cf" transform="idPersonaFromCf" values="responsabili" signRole="RL">responsabile di laboratorio</input>
	</inputs>
	<list>
		<document load="proposta ordine.xml" />
		<document name="indagine di mercato" minOccur="1" maxOccur="1"
			onlyIfType="mepa" />
		<document name="preventivo/richiesta preventivo" minOccur="2"
			onlyIfType="fuori mepa" />
		<document name="foglio cig" minOccur="0" maxOccur="1">
			<inputs>
				<input>numero cig</input>
			</inputs>
		</document>
		<document name="determina" minOccur="1" maxOccur="1" />
		<document name="provvedimento d'impegno" minOccur="1"
			maxOccur="1">
			<inputs>
				<input>numero impegno</input>
				<input type="year">anno impegno</input>
			</inputs>
			<signatures>
				<signature role="DIR" />
				<signature role="SAMM" />
			</signatures>
		</document>
		<document name="conflitto d'interesse" minOccur="1" maxOccur="1">
			<signatures>
				<signature role="RUP" />
			</signatures>
		</document>
		<document name="ordine mepa-sigla" minOccur="1" maxOccur="1">
			<signatures>
				<signature role="DIR" />
			</signatures>
		</document>
		<document name="documento di rettifica" minOccur="0" maxOccur="1"/>
		<document name="fattura" minOccur="1" maxOccur="1">
			<inputs>
				<input>numero fattura</input>
				<input type="data">data fattura</input>
			</inputs>
		</document>
		<document name="verbale di collaudo" minOccur="0" maxOccur="1" />
		<document name="dichiarazione dei requisiti" minOccur="1"
			maxOccur="1" />
		<document name="modello di liquidazione" minOccur="1"
			maxOccur="1">
			<signatures>
				<signature role="RUP" />
			</signatures>
		</document>
		<document name="mandato di pagamento" minOccur="1" maxOccur="1">
			<inputs>
				<input>numero mandato</input>
				<input type="data">data mandato</input>
			</inputs>
			<signatures>
				<signature role="SAMM" />
			</signatures>
		</document>
	</list>
</masterDocument>